âœ… C++ Implementation (Primâ€™s Algorithm)
cpp
#include <bits/stdc++.h>
using namespace std;

int minCostConnectPoints(vector<vector<int>>& points) {
    int n = points.size();
    vector<bool> inMST(n, false);   // track which points are already connected
    int edgesUsed = 0;
    int cost = 0;

    // Min-heap storing {distance, node}
    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<pair<int,int>>> pq;
    pq.push({0, 0}); // start from point 0 with cost 0

    while (edgesUsed < n) {
        auto [dist, u] = pq.top(); pq.pop();
        if (inMST[u]) continue;     // skip if already connected

        inMST[u] = true;
        cost += dist;
        edgesUsed++;

        // push all edges from u to other nodes
        for (int v = 0; v < n; v++) {
            if (!inMST[v]) {
                int d = abs(points[u][0] - points[v][0]) + abs(points[u][1] - points[v][1]);
                pq.push({d, v});
            }
        }
    }
    return cost;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T; cin >> T;
    while (T--) {
        int n; cin >> n;
        vector<vector<int>> points(n, vector<int>(2));
        for (int i = 0; i < n; i++) {
            cin >> points[i][0] >> points[i][1];
        }
        cout << minCostConnectPoints(points) << "\n";
    }
    return 0;
}
