ques : calculate the sum of boundary element in the matrix

  boundary element = 1st row + last row + 1st coloum + last col


  int main() {
    int r , c ;
    cin>>r>>c;
    vector<vector<int>> mat(r, vector<int>(c));
    long long sum = 0 ;
    //sum of 1st row + last row + 1st col + last col = boundary elements
    
    for(int i = 0 ; i<r ; i++){
        for(int j = 0 ; j<c ; j++){
            cin>>mat[i][j];
            
            //boundary
            if(i == 0 || i == r-1 || j ==0 || j == c-1){
                sum +=mat[i][j];
            }
        }
    }
    cout<<sum<<" ";
    return 0;
}
